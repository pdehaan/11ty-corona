---
title: COVID Canada
eleventyExcludeFromCollections: true
permalink: /
layout: layouts/base.liquid
---

{% assign recentStats = stats | reverse %}
{% assign latest = stats | first %}
{% assign deathsPct = latest.stats.Deaths | divided_by: latest.stats.Confirmed | times: 100 | toFixed: 2 %}
{% assign recoveredPct = latest.stats.Recovered | divided_by: latest.stats.Confirmed | times: 100 | toFixed: 2 %}

<table class="border-collapse border-2 border-gray-500 table-auto" width="100%">
<thead>
<tr>
  <th class="text-left p-2 bg-gray-200">Date</th>
  <th class="text-right p-2 bg-gray-200">Confirmed</th>
  <th class="text-right p-2 bg-gray-200">Deaths ({{ deathsPct }}%)</th>
  <th class="text-right p-2 bg-gray-200">Recovered ({{ recoveredPct }}%)</th>
</tr>
</thead>
<tbody>
{%- for data in recentStats %}
<tr>
  <td class="p-2"><a href="pages/{{ data.date }}/" class="text-indigo-600 hover:text-indigo-400">{{ data.date }}</a></td>
  <td class="p-2 text-right">{{ data.stats.Confirmed }}</td>
  <td class="p-2 text-right">{{ data.stats.Deaths }}</td>
  <td class="p-2 text-right">{{ data.stats.Recovered }}</td>
</tr>
{%- endfor %}
</tbody>
</table>
